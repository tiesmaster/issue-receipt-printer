<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"

        x:Class="IssuePrinter.Wpf.MainWindow"
        Title="MainWindow"
        Height="450"
        Width="525">

    <StackPanel Margin="20">
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Label Target="{Binding ElementName=IssueInputBox}">_Issue:</Label>
            <TextBox Grid.Row="0" Grid.Column="1" Name="IssueInputBox" />
            <Button Grid.Row="0" Grid.Column="2" Padding="5,0" Click="PrintIssueButton_Click">_PRINT ISSUE!</Button>

            <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=SprintInputBox}">_Sprint:</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Name="SprintInputBox" />
            <Button Grid.Row="1" Grid.Column="2" Padding="5,0" Click="PrintSprintButton_Click">PRINT SPRINT!</Button>

        </Grid>

        <GroupBox Header="JIRA Settings" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=HostInputBox}">_Host:</Label>
                <TextBox Grid.Row="0" Grid.Column="1" Name="HostInputBox" />

                <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=UsernameInputBox}">_Username:</Label>
                <TextBox Grid.Row="1" Grid.Column="1" Name="UsernameInputBox" />

                <Label Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=PasswordInputBox}">_Password:</Label>
                <PasswordBox Grid.Row="2" Grid.Column="1" Name="PasswordInputBox" />
                
            </Grid>
        </GroupBox>

        <ListBox Name="PrinterInputBox" />

    </StackPanel>

</Window>